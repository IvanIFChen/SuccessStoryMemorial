<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.usmartcareer.successstorymemorial2017">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.usmartcareer.successstorymemorial2017.SSCardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- This service is only used on devices with API v17+ -->
        <activity
            android:name="com.usmartcareer.successstorymemorial2017.SpecialCardActivity"
            android:label="@string/title_activity_special_card"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.usmartcareer.successstorymemorial2017.SpecialCardContentActivity"
            android:label="@string/title_activity_special_card"
            android:theme="@style/AppTheme" />
    </application>

</manifest>